        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "lib": ["es6", "es2016", "ES2021", "dom", "DOM.Iterable"],
        "downlevelIteration": true,
        "target": "ES2021",
        "outDir": "./build",
        "experimentalDecorators": true
    },
    "include": [
        "./src/*.ts",
        "./storage/src/*.ts"
    ]
